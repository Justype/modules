install_app() {
    # mkdir -p "$target_base_dir"  # modules/apps/name
    mkdir -p "$target_dir"       # modules/apps/name/version
    mkdir -p "$tmp_dir"          # tmp directory
    cd "$tmp_dir"

    print_stderr "Downloading ${YELLOW}${app_name_version}${NC}"
    run_command wget -nv -O "KMC.linux.x64.tar.gz" https://github.com/refresh-bio/KMC/releases/download/v${version}/KMC${version}.linux.x64.tar.gz
    tar xf KMC.linux.x64.tar.gz -C "$target_dir" #--strip-components=1
}


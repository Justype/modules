#!/usr/bin/bash
#WHATIS:A lightweight conda installer

#########################################################
# Micromamba
# - https://mamba.readthedocs.io/en/latest/user_guide/micromamba.html
# - Micromamba is a fast, minimal installer for conda packages
#########################################################

install_app() {
    mkdir -p "$target_dir/bin" # modules/apps/name/version

    case "$(uname)" in
        Linux)  PLATFORM="linux" ;;
        Darwin) PLATFORM="osx" ;;
        *NT*)   PLATFORM="win" ;;
    esac

    ARCH="$(uname -m)"
        case "$ARCH" in
        aarch64|ppc64le|arm64) ;;  # pass
        *)  ARCH="64" ;;
    esac

    case "$PLATFORM-$ARCH" in
    linux-aarch64|linux-ppc64le|linux-64|osx-arm64|osx-64|win-64)
        ;;  # pass
    *)
        echo "Failed to detect your OS" >&2
        exit 1
        ;;
    esac

    VERSION="${version}-0"

    print_stderr "Downloading ${YELLOW}${app_name_version}${NC}"
    ## Add your download link here
    RELEASE_URL="https://github.com/mamba-org/micromamba-releases/releases/download/${VERSION}/micromamba-${PLATFORM}-${ARCH}"
    wget -nv -O "${target_dir}/bin/micromamba" "$RELEASE_URL"

    print_stderr "Setting executable permission for ${YELLOW}${app_name_version}${NC}"
    chmod +x "${target_dir}/bin/micromamba"

    print_stderr "Setting up helping scripts for handling micromamba environments"
    cat << EOF > "${target_dir}/bin/mm"
#!/usr/bin/bash
\${MICROMAMBA_HOME}/bin/micromamba --root-prefix \${MICROMAMBA_HOME}/mamba \$@
EOF
    chmod +x "${target_dir}/bin/mm"

    cat << EOF > "${target_dir}/bin/mm-create"
#!/usr/bin/bash
\${MICROMAMBA_HOME}/bin/micromamba --root-prefix \${MICROMAMBA_HOME}/mamba create --channel conda-forge --channel bioconda --override-channels \$@
EOF
    chmod +x "${target_dir}/bin/mm-create"

#     cat << EOF > "${target_dir}/bin/mm-clean"
# #!/usr/bin/bash
# \${MICROMAMBA_HOME}/bin/micromamba --root-prefix \${MICROMAMBA_HOME}/mamba clean --packages --tarballs \$@
# EOF
#     chmod +x "${target_dir}/bin/mm-clean"
}

